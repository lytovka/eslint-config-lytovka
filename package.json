{
  "name": "@lytovka/eslint-config",
  "type": "module",
  "version": "1.4.1",
  "description": "ESLint rules configuration according to Ivan Lytovka's preference.",
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "lytovka"
  ],
  "homepage": "https://github.com/lytovka/eslint-config",
  "bugs": {
    "url": "https://github.com/lytovka/eslint-config/issues",
    "email": "ivanlytovka@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/lytovka/eslint-config.git"
  },
  "author": "Ivan Lytovka <ivanlytovka@gmail.com> (https://github.com/lytovka)",
  "files": [
    "src/index.js",
    "src/factory/*",
    "package.json"
  ],
  "main": "src/index.js",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "./src/index.js"
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "engines": {
    "node": ">=18.18.0 || >=20.9.0 || >=21.0.0",
    "npm": ">=9",
    "yarn": ">=1"
  },
  "engineStrict": true,
  "scripts": {
    "lint": "eslint --config index.js .",
    "find-new-rules": "eslint-find-rules --unused ./index.js",
    "format": "npm run format:fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.1",
    "globals": "^15.3.0",
    "typescript-eslint": "^7.11.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/eslint": "^8.56.10",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.5",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "typescript": "^4.7.4 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
